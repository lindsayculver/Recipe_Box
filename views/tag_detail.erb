<h6>Update <%=@tag.name() %></h6>

<form action="/tags/<%= @tag.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-info btn-xs">Rename</button>
</form>
