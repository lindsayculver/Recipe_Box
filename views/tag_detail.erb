<h1><%= @tag.name %> recipes</h1>

<br>
<ul>
  <% @tag.recipes.each() do |recipe| %>
  <li> <a href="/recipe/<%= recipe.id() %>"><%= recipe.name() %></a></li>
  <% end %>
</ul>

<br>
<form action="/tags/<%= @tag.id() %>/new" method="post">
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-success btn-xs">add a recipe</button>
</form>
<br>

<form action="/tags/<%= @tag.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-info btn-xs">Rename <%=@tag.name() %></button>
</form>
<br>
<form action='/tags/<%= @tag.id() %>/delete' method='post'>
  <input type="hidden" name='_method' value='delete'>
  <button type='submit' class="btn btn-warning btn-xs">DELETE <%= @tag.name %></button>
</form>

<br>
<a href="/" class="btn btn-success btn-xs">Back to Categories</a>
